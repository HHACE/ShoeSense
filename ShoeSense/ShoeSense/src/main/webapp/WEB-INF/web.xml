<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordController</servlet-name>
        <servlet-class>Controller.ForgotPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUserManagement</servlet-name>
        <servlet-class>Controller.AdminUserManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdressController</servlet-name>
        <servlet-class>Controller.UserAdressController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>Controller.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminStaffManagement</servlet-name>
        <servlet-class>Controller.AdminStaffManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProductController</servlet-name>
        <servlet-class>Controller.UserProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>Controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportManagementController</servlet-name>
        <servlet-class>Controller.ImportManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductVariantsManagementController</servlet-name>
        <servlet-class>Controller.ProductVariantsManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductManagementController</servlet-name>
        <servlet-class>Controller.ProductManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderManagementController</servlet-name>
        <servlet-class>Controller.OrderManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderHistoryController</servlet-name>
        <servlet-class>Controller.OrderHistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>Controller.CheckoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentManagementController</servlet-name>
        <servlet-class>Controller.CommentManagementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordController</servlet-name>
        <url-pattern>/forgotpass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUserManagement</servlet-name>
        <url-pattern>/admin/user/manage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdressController</servlet-name>
        <url-pattern>/user/adress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/user/profile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminStaffManagement</servlet-name>
        <url-pattern>/admin/staff/manage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProductController</servlet-name>
        <url-pattern>/product/detail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportManagementController</servlet-name>
        <url-pattern>/import/manage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductVariantsManagementController</servlet-name>
        <url-pattern>/product/variant/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductManagementController</servlet-name>
        <url-pattern>/product/manage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderManagementController</servlet-name>
        <url-pattern>/order/manage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderHistoryController</servlet-name>
        <url-pattern>/order/history/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/checkout/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentManagementController</servlet-name>
        <url-pattern>/comment/manage/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
